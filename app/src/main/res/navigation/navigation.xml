<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation"
            app:startDestination="@id/main_nav_fragment">
    <fragment
            android:id="@+id/main_nav_fragment"
            android:name="si.f5.e_yama.connpassclient.ui.main.MainFragment"
            android:label="fragment_main"
            tools:layout="@layout/main_fragment" >
        <action
                android:id="@+id/action_detailed_search"
                app:destination="@id/detailed_search_nav_fragment" />
        <action
                android:id="@+id/action_detail_result"
                app:destination="@id/detail_result_nav_fragment" />
    </fragment>

    <fragment
            android:id="@+id/detailed_search_nav_fragment"
            android:name="si.f5.e_yama.connpassclient.ui.search.DetailedSearchFragment"
            android:label="fragment_detailed_search"
            tools:layout="@layout/detailed_search_fragment" >
    </fragment>
    <fragment
            android:id="@+id/detail_result_nav_fragment"
            android:name="si.f5.e_yama.connpassclient.ui.detail.EventDetailFragment"
            android:label="fragment_detail_result"
            tools:layout="@layout/event_detail_fragment" >
    </fragment>
</navigation>